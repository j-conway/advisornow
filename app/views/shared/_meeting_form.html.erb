<%= form_for [@consult, @meeting] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
      
  <%= f.label :description %>
  <%= f.text_field :description, placeholder: "Create new meeting..." %>

  <%= f.label :requested_length, 'Meeting length (hours)?' %>
  <%= f.select(:requested_length, @requested_lengths.map { |value| [ value, value ]}) %>

  <%= f.label :requested_date, 'What day you want to meet?' %>
  <%= f.text_field :requested_date, :class => 'scheduled_date' %>

  <%= f.label :requested_time, 'What time (Pacific)?' %>
  <%= f.text_field :requested_time, :class => 'scheduled_time' %>
  
  <%= f.submit "Create a meeting", class: "btn btn-large btn-primary" %>
<% end %>