<%= form_for [@company, @consult] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

  <%= f.label :subject, "What's it about?" %>
  <%= f.text_field :subject %>
  
  <h2><%= @company.name %> Customer</h2>
  <%= f.collection_select(:customer_id, @users.all, :id, :name) %>

  <h2>Alpine Data Scientist</h2>
  <%= f.collection_select(:datascientist_id, User.datascientists.all, :id, :name) %>
  

  <%= f.label :scheduled_length, 'Meeting length (hours)?' %>
  <%= f.select(:scheduled_length, @scheduled_lengths.map { |value| [ value, value ]}) %>

  <%= f.label :scheduled_datetime, 'When do you want to meet (Pacific Time)?' %>
  <%= f.text_field :scheduled_datetime %>


  <%= f.submit "Create new consult", class: "btn btn-large btn-primary" %>
  </div>
<% end %>