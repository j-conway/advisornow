<%= form_for [@company, @user] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
      
    <% if alpine_session? %>  
      <%= f.label :alpine_user , "Alpine?", :class => "checkbox inline" %>
      <%= f.check_box :alpine_user %>
    <% end %>
 
    <%= f.label :company_admin, "Company Admin?", :class => "checkbox inline" %>
    <%= f.check_box :company_admin %>
    <br>

    <%= f.label :entitled, "Entitled?", :class => "checkbox inline" %>
    <%= f.check_box :entitled %>
    <br><br>
     
    <%= f.submit "Create new user", class: "btn btn-large btn-primary" %>
<% end %>