<% provide(:title, @company.name) %>
<h1>Company: <%= @company.name %></h1>
<h1>Entitlements Remaining: <%= @company.entitlements %></h1>
<div class="row">
  <% if current_user.company_admin? %> 
    <aside class="col-lg-4 col-md-4">
      <h3>New <%= @company.name %> User</h3>
      <section>
      <%= render '/shared/new_user_form' %>
      </section>
    </aside>

    <div class="col-lg-8 col-md-8">
      <h3>Consults (<%= link_to @company.consults.count, company_consults_path(@company.id) %>)</h3>
      <table class="table table-hover" summary="Consults">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Data Scientist</th>
          </tr>
        </thead>
        <tbody>
          <%= render @consults %>
        </tbody>
      </table>
      <%= will_paginate @consults, renderer: BootstrapPagination::Rails %>

    </div>


  <% else %>

    <div class="col-lg-12 col-md-12">
      <h3>Consults (<%= link_to @company.consults.count, company_consults_path(@company.id) %>)</h3>
      <table class="table table-hover" summary="Consults">
      <%= render 'shared/consults_table' %>
      <%= will_paginate @consults, renderer: BootstrapPagination::Rails %>
    </div>

  <% end %>
</div>
