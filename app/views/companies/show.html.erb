<% provide(:title, @company.name) %>
<h1>Company: <%= @company.name %></h1>
<h1>Entitlements Remaining: <%= @company.entitlements %></h1>
<div class="row">
  <aside class="span4">
    <section>
    <%= render '/shared/new_user_form' %>
    </section>
  </aside>

  <div class="span4">
    <% if @company.consults.any? %>
      <h3>Consults (<%= @company.consults.count %>)</h3>
      <ol class="consults">
        <%= render @consults %>
      </ol>
      <%= will_paginate @consults %>
    <% end %>
  </div>

  <aside class="span4">
    <section>
    <h1>Book a consult</h1>
    <% if current_user.alpine_user? && current_company?(current_user.company) %>
      <%= render '/shared/alpine_consult_form' %>
    <% end %>

    <% if !current_user.alpine_user? && current_company?(current_user.company) %>
      <%= render '/shared/cust_consult_form' %>
    <% end %>
    
    </section>
  </aside>
  <div class = "row">

    <div class="span12">
      <% if @users.any? %>
        <h3>Members <%= @users.count %> </h3>
        <ol class="users">
          <%= render @users %>
        </ol>
        <%= will_paginate @users %>
      <% end %>
    </div>
  </div>

</div>