<% provide(:title, @company.name) %>
<h1>Company: <%= @company.name %></h1>
<h1>Entitlements Remaining: <%= @company.entitlements %></h1>
<div class="row">
  <% if current_user.company_admin? %> 
    <aside class="span4">
      <section>
      <%= render '/shared/new_user_form' %>
      </section>
    </aside>

    <div class="span4">
      <% if @company.consults.any? %>
        <h3><%= link_to "Consults", company_consults_path(@company.id) %> (<%= @company.consults.count %>)</h3>
        <ol class="consults">
          <%= render @consults %>
        </ol>
        <%= will_paginate @consults %>
      <% end %>
    </div>

    <aside class="span4">
      <section>
      <%= link_to "Create New Consult", new_company_consult_path(@company.id), class: "btn btn-large btn-primary" %>
      </section>
    </aside>


  <% else %>

    <div class="span8">

      <h3><%= link_to "Consults", company_consults_path(@company.id) %>(<%= @company.consults.count %>)</h3>
      <table class="table table-hover" summary="Consults">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Data Scientist</th>
          </tr>
        </thead>
        <tbody>
          <%= render @consults %>
        </tbody>
      </table>
      <%= will_paginate @consults, renderer: BootstrapPagination::Rails %>
    </div>

    <aside class="span4">
      <section>
      <%= link_to "Create New Consult", new_company_consult_path(@company.id), class: "btn btn-large btn-primary" %>
      
      </section>
    </aside>

  <% end %>


  <div class = "row">
    <div class="span12">
      <% if @users.any? %>
        <h3>Members <%= @users.count %> </h3>
        <ol class="users">
          <%= render @users %>
        </ol>
        <%= will_paginate @users %>
      <% end %>
    </div>
  </div>

</div>