<% provide(:title, 'New Company') %>
<h1>New Company</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@company, :url => '/newcompany') do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :entitlements %>
      <%= f.text_field :entitlements %>

      <%= f.submit "Create my company", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>