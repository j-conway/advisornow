<% if consult.next_open_meeting.requested? %>

  <% if consult.next_open_meeting.requester_id == current_user.id %>
  <td>
    <span class="content">
      <%= link_to "Change", edit_consult_meeting_path(:consult_id => consult.id, :id => consult.next_open_meeting.id ), :class => "edit-link", 'data-no-turbolink' => true %>
    </span>
  </td>
  <% elsif consult.next_open_meeting.requester_id != current_user.id && (consult.customer_id == current_user.id || alpine_session?) %>
  <td>
    <span class="content">
      <%= link_to "Change/Confirm", edit_consult_meeting_path(:consult_id => consult.id, :id => consult.next_open_meeting.id), :class => "edit-link", 'data-no-turbolink' => true %>
    </span>
  </td>
  <% else %>
  <td>
    
  </td>
  <% end %>

<% elsif !consult.next_open_meeting.requested? %>
  <td>
    <span class="content">
      <%= link_to "Change", edit_consult_meeting_path(:consult_id => consult.id, :id => consult.next_open_meeting.id ), :class => "edit-link", 'data-no-turbolink' => true %>
    </span>
  </td>
<% end %>