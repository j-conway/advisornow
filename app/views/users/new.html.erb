<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, :url => '/signup') do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
      
      <%= f.label :alpine_user , "Alpine user?", :class => "checkbox inline" %>
      <%= f.check_box :alpine_user %>

      <%= f.label :company_admin, "Company Administrator?", :class => "checkbox inline" %>
      <%= f.check_box :company_admin %>

      <%= f.label :entitled, "Entitled?", :class => "checkbox inline" %>
      <%= f.check_box :entitled %>

      <br><br>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>